<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCardView"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/action_card_view_background"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/textActionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewActionDisplay"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="TextView"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewActionLeft"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_add"
        android:contentDescription="@string/image_view_action_desc" />

</LinearLayout>